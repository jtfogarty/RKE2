apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: {{ lb_pool_name }}
  namespace: metallb-system
spec:
  addresses:
  - {{ lb_range }}
---
apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
  name: l2advertisement
  namespace: metallb-system
spec:
  ipAddressPools:
  - {{ lb_pool_name }}
